generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
}

model Bookstore {
  id           Int      @id @default(autoincrement())
  name         String
  slug         String   @unique
  address      String
  neighborhood String
  lat          Float
  lng          Float
  description  String
  websiteUrl   String?
  hours        String?
  specialty    String?
  imageUrl     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model BlogPost {
  id          Int       @id @default(autoincrement())
  title       String
  slug        String    @unique
  content     String
  excerpt     String
  published   Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model CurrentRead {
  id        Int      @id @default(autoincrement())
  title     String
  author    String
  coverUrl  String?
  linkUrl   String?
  notes     String?
  active    Boolean  @default(true)
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
